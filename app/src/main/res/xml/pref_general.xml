<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="auto_play_enabled"
        android:title="@string/pref_title_auto_play"
        android:summary="@string/pref_description_auto_play"
    />

    <SwitchPreference
        android:defaultValue="true"
        android:key="quiet_mode_enabled"
        android:title="@string/pref_title_quiet_mode"
        android:summary="@string/pref_description_quiet_mode"
    />

    <SwitchPreference
        android:defaultValue="true"
        android:key="push_to_background_enabled"
        android:title="@string/pref_title_push_to_background"
        android:summary="@string/pref_description_push_to_background"
        />
