    <EditTextPreference
        android:inputType="text"
        android:key="bluetooth_async_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_bluetooth_async_name"
        android:summary="@string/pref_description_bluetooth_async_name"
    />

    <EditTextPreference
        android:inputType="text"
        android:defaultValue="0"
        android:key="bluetooth_async_offset"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_bluetooth_async_offset"
        android:summary="@string/pref_description_bluetooth_async_offset"
    />


